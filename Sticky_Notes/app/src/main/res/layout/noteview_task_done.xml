<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/mainLayout_task_done">

<androidx.cardview.widget.CardView
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#E2EAEF"
    android:layout_marginTop="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeView"
            android:layout_marginTop="10dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/id_linear1"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/notes"
                    android:layout_width="310dp"
                    android:layout_height="38dp"
                    android:text="Enter your note..."
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="-7dp"
                    tools:layout_editor_absoluteY="4dp" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_done_24"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/id_linear2"
                android:layout_below="@id/id_linear1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/notes"
                    android:text="date"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="-4dp"
                    tools:layout_editor_absoluteY="49dp" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/notes"
                    android:layout_toEndOf="@id/date"
                    android:text="and time"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="45dp"
                    tools:layout_editor_absoluteY="49dp" />

                <TextView
                    android:id="@+id/deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/notes"
                    android:layout_toEndOf="@+id/time"
                    android:text="deadline"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="132dp"
                    tools:layout_editor_absoluteY="49dp" />

                <TextView
                    android:id="@+id/reminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/notes"
                    android:layout_toEndOf="@id/deadline"
                    android:text="reminder"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="200dp"
                    tools:layout_editor_absoluteY="51dp" />

                <TextView
                    android:id="@+id/id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/notes"
                    android:layout_toEndOf="@id/reminder"
                    android:text="id"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="287dp"
                    tools:layout_editor_absoluteY="51dp" />

            </LinearLayout>

<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="2dp"-->
<!--                android:background="@color/gray"/>-->

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>