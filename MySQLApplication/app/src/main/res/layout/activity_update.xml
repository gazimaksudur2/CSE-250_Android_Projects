<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Update_activity">

<EditText
    android:id="@+id/title_input_2"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginTop="150dp"
    android:ems="10"
    android:gravity="center"
    android:hint="Book Title"
    android:inputType="text"
    app:layout_constraintBottom_toTopOf="@+id/author_input_2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.497"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.022" />

<EditText
    android:id="@+id/author_input_2"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:ems="10"
    android:gravity="center"
    android:hint="Book Author"
    android:inputType="text"
    android:layout_marginTop="16dp"
    app:layout_constraintBottom_toTopOf="@+id/pages_input_2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/title_input_2"
    tools:ignore="MissingConstraints" />

<EditText
    android:id="@+id/pages_input_2"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginTop="16dp"
    android:ems="10"
    android:gravity="center"
    android:hint="Number of pages"
    android:inputType="text"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/author_input_2" />

    <Button
        android:id="@+id/update_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:text="Update Book"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/pages_input_2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="189dp" />

    <Button
        android:id="@+id/del_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:text="Delete Book"
        android:textColor="#EC0909"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/update_button"
        tools:layout_editor_absoluteX="35dp" />

</androidx.constraintlayout.widget.ConstraintLayout>