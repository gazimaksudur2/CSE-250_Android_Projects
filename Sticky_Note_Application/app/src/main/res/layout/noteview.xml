<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ff4d4d"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notes"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="Enter your note..."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/notes"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:text="date"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@id/date"
        android:layout_below="@+id/notes"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:text="and time"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deadline"
        android:layout_below="@id/notes"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/time"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:text="deadline"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reminder"
        android:layout_below="@id/notes"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@id/deadline"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:text="reminder"
        />

    <Button
        android:id="@+id/id_btn_done_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Button.Icon"
        app:icon ="@drawable/img"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:id="@+id/note_Linear_layout"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#938787"
        android:layout_below="@id/time"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"/>

</RelativeLayout>