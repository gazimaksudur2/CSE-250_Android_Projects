<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a3a3c2">

    <TextView
        android:id="@+id/txt_title2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Done Tasks"
        android:textSize="30dp"
        android:padding="10dp"
        android:textColor="#1a1a00"
        android:textStyle="bold"
        android:background="#006666"/>

    <LinearLayout
        android:id="@+id/title_Linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#00e6e6"
        android:layout_below="@id/txt_title2"
        android:orientation="horizontal"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_recycler_done_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_Linear_layout2"/>

    <LinearLayout
        android:id="@+id/Linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#938787"
        android:layout_above="@id/linear1"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/linear1"
        android:background="#003366"
        >

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btn_back"
            android:padding="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/baseline_arrow_back_24"
            android:layout_alignParentBottom="true"
            />
        <TextView
            android:layout_width="270dp"
            android:layout_height="match_parent"
            />

        <Button
            android:id="@+id/btn_delete_done_tasks"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:paddingVertical="20dp"
            android:background="@drawable/bin"
            android:padding="50dp" />

    </LinearLayout>


</RelativeLayout>